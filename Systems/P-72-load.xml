          <value>0</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>controls/signal8</property>
          <value>0</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>controls/signal9</property>
          <value>0</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>controls/signal10</property>
